<div class="container-fluid">
  <%= render :partial => "devise/shared/header", :locals => {:message => "Edit User Profile"} %>

    <%= devise_error_messages! %>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

      <%= render :partial => "devise/shared/email", :locals => {:f => f} %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="form-group">
          <div class="col-xs-12">
            <div class="columns">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <div class="col-xs-12">
          <%= f.check_box :gets_daily_dharma %> <%= f.label :gets_daily_dharma, "Sign up for Daily Dharma?" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-12">
          <%= f.label :password, "password" %>
          <%= f.label :password, "(leave blank if you don't want to change it)" %>
          <%= f.password_field :password, :autocomplete => "off" %>
        </div>
      </div>

      <%= render :partial => "devise/shared/password_confirmation", :locals => {:f => f} %>

      <div class="form-group">
        <div class="col-xs-12">
          <%= f.label :current_password, "current password" %>
          <%= f.label :current_password, "(we need your current password to confirm your changes)" %>
          <%= f.password_field :current_password %>
        </div>
      </div>

      <%= render :partial => "devise/shared/submit", :locals => {:f => f, :message => "Update"} %>
  <% end %>

  <hr />

  <div class="form-group">
    <div class="col-xs-12">
      <h3>Cancel my account</h3>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-12">
      <p>Are you sure you want to leave us?</p>
      <%= button_to "Cancel my account", registration_path(resource_name), :class => "btn btn-danger", 
        :data => { :confirm => "Are you sure?" }, :method => :delete %>
    </div>
  </div>

  <hr />

  <div class="form-group">
    <div class="col-xs-12">
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
