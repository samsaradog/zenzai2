<div class="container-fluid">
  <%= render :partial => "devise/shared/header", :locals => {:message => "Forgot your password?"} %>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= render :partial => "devise/shared/email", :locals => {:f => f} %>

    <%= recaptcha_v3(action: 'password_reset', site_key: ENV['RECAPTCHA_V3_SITE_KEY']) %>

    <%= render :partial => "devise/shared/submit", :locals => {:f => f, :message => "Send me reset password instructions"} %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

