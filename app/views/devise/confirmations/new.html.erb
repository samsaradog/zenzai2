<div class="container-fluid">
  <%= render :partial => "devise/shared/header", :locals => {:message => "Resend confirmation instructions"} %>

  <div class="jumbotron">
    <p>
       If you missed getting an email with confirmation instructions, please provide it here and we will send
       it to you again.
    </p>
  </div>

  <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>

    <%= render :partial => "devise/shared/email", :locals => {:f => f} %>
    <%= render :partial => "devise/shared/submit", :locals => {:f => f, :message => "Resend confirmation instructions"} %>

  <% end %>

  <%= render "devise/shared/links" %>
</div>

