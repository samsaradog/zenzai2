 <div class="container-fluid">
   <h2>Jewels</h2>
   <table id="jewels-datatable" data-source="<%= jewels_url(format: :json) %>" class="table table-striped table-bordered dt-responsive nowrap">
     <thead>
       <tr>
         <th>Origin</th>
         <th>Citation</th>
         <th>Quote</th>
         <th>Comment</th>
         <th>Action</th>
       </tr>
     </thead>
     <tbody>
     </tbody>
   </table>
 </div>

<script type='text/javascript'>
  $(document).ready(function(){
    $('#jewels-datatable').DataTable({
    "processing": true,
      "serverSide": true,
      "ajax": {
        "url": $('#jewels-datatable').data('source')
      },
      "columns": [
        {"data": "origin"},
        {"data": "citation"},
        {"data": "quote"},
        {"data": "comment"},
        {"data": "action"},
      ]
    });
  });
</script>
