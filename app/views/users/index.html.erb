<div class="container-fluid">
  <h2>Users</h2>
  <table id="users-datatable" data-source="<%= users_path(format: :json) %>" class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
      <tr>
        <th>Email Address</th>
        <th>Gets Daily Dharma</th>
        <th>Confirmed</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>

<script type='text/javascript'>
  $(document).ready(function(){
    $('#users-datatable').DataTable({
    "processing": true,
      "serverSide": true,
      "ajax": {
        "url": $('#users-datatable').data('source')
      },
      "columns": [
        {"data": "email"},
        {"data": "gets"},
        {"data": "confirmed"},
      ]
    });
  });
</script>
